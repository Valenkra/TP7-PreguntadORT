@{
    ViewData["Title"] = "Jugando";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="stylesheet.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <main>
        <span class="pregunta">
            @ViewBag.pregunta.Enunciado
            
        </span>
        <form action='@Url.Action("VerificarRespuesta", new {idPregunta = @ViewBag.pregunta.IdPregunta})' method="POST" style="padding-top: 1rem;">
            @foreach(var res in ViewBag.Respuestas) {
                <div class="form__answer">
                    <img class="enform"src="imgs/opcion1.avif" alt="">
                    <div>
                    <input type="radio" name="idRespuesta" value=@res.IdRespuesta required>
                    <label>@res.Contenido</label>
                    </div>
                </div>
            }
            <input class="submit" id="enviar-respuesta" type="submit" value="Enviar">
            
        </form>
    </main>

</body>
</html>